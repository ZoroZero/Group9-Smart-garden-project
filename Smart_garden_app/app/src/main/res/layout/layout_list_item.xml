<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:focusable="true"
    android:background="#C1D045"
    android:id="@+id/layout_item_view">

    <TextView
        android:id="@+id/txt_device_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:textSize="20dp"
        android:focusable="false"
        android:text="THIS IS DEVICE NAME"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/txt_device_id"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="bottom"
        android:textSize="15dp"
        android:paddingLeft="5dp"
        android:text="This is device ID"/>

    <TextView
        android:id="@+id/txt_device_type"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="bottom"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:paddingLeft="5dp"
        android:text="This is device type"/>

    <TextView
        android:id="@+id/txt_user_id"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="bottom"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:paddingLeft="5dp"
        android:text="This is user id"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#ffffff">
    </LinearLayout>

</LinearLayout>
