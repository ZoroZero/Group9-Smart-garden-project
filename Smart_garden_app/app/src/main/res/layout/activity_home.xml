<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context="Login_RegisterUser.HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="30dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/Home_HelloUser_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:text="TextView"
                        android:textAlignment="viewStart"
                        android:textColor="#829A82"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/linearLayout7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/round_header"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Home_HelloUser_TV">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/Home_reading1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.45"
                                android:paddingBottom="8dp">

                                <TextView
                                    android:id="@+id/Home_DeviceLastReading1_TV"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="sans-serif-light"
                                    android:gravity="center"
                                    android:text="TextView"
                                    android:textColor="@color/humidityColor"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/Home_readingType1_TV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Average humidity"
                                    android:textColor="#655757"
                                    android:textSize="18sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/Home_DeviceLastReading1_TV" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <View
                                android:id="@+id/divider14"
                                android:layout_width="8dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_weight="0.02"
                                android:background="@color/colorPrimary" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/Home_reading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.45"
                                android:paddingBottom="8dp">

                                <TextView
                                    android:id="@+id/Home_DeviceLastReading_TV"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="sans-serif-light"
                                    android:gravity="center"
                                    android:text="TextView"
                                    android:textColor="@color/temperatureColor"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/Home_readingType_TV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Average temperature"
                                    android:textColor="#655757"
                                    android:textSize="18sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/Home_DeviceLastReading_TV" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>

                        <View
                            android:id="@+id/divider11"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0.5"
                            android:background="?android:attr/listDivider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/Home_reading2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.45"
                                android:paddingBottom="8dp">

                                <TextView
                                    android:id="@+id/Home_DeviceLastReading2_TV"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="sans-serif-light"
                                    android:gravity="center"
                                    android:text="TextView"
                                    android:textColor="@color/lightColor"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/Home_readingType2_TV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Average light"
                                    android:textColor="#655757"
                                    android:textSize="18sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/Home_DeviceLastReading2_TV" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <View
                                android:id="@+id/divider15"
                                android:layout_width="8dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="0.02"
                                android:background="@color/colorPrimary" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/Home_reading3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.45"
                                android:paddingBottom="8dp">

                                <TextView
                                    android:id="@+id/Home_DeviceLastReading3_TV"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="sans-serif-light"
                                    android:gravity="center"
                                    android:text="TextView"
                                    android:textColor="#778C77"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/Home_readingType3_TV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="devices on"
                                    android:textColor="#655757"
                                    android:textSize="18sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/Home_DeviceLastReading3_TV" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:text="What do you want to do?"
                        android:textAlignment="viewStart"
                        android:textColor="#798F79"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center|center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout6">

                    <Button
                        android:id="@+id/Home_ViewDeviceList_Btn"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_header"
                        android:drawableTop="@drawable/ic_stay_primary_portrait_black_24dp"
                        android:gravity="center_horizontal"
                        android:letterSpacing=".05"
                        android:paddingLeft="16dp"
                        android:paddingTop="30dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="5dp"
                        android:text="\nView your devices"
                        android:textColor="#798F79"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/Home_ViewPlantList_Btn"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/round_header"
                        android:drawableTop="@drawable/ic_view_plant_list_50dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="30dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp"
                        android:text="Check your plants"
                        android:textColor="#798F79"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center|center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <Button
                        android:id="@+id/Home_RegisterDevice_Btn"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_header"
                        android:drawableTop="@drawable/ic_register_device_50dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="30dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="5dp"
                        android:text="@string/register_device"
                        android:textColor="#798F79"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/Home_RegisterPlant_Btn"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/round_header"
                        android:drawableTop="@drawable/ic_register_plant_50dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="30dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="5dp"
                        android:text="@string/register_plant"
                        android:textColor="#798F79"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center|center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

                    <Button
                        android:id="@+id/Home_ViewReport_Btn"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_header"
                        android:drawableTop="@drawable/ic_view_report_50dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="30dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="5dp"
                        android:text="@string/view_report"
                        android:textColor="#798F79"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/Home_Logout_Btn"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/round_header"
                        android:drawableTop="@drawable/ic_log_out_50dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="30dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="5dp"
                        android:text="@string/log_out"
                        android:textColor="#798F79"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
